<script>
    $('.entry-group').hide();
    $('#apelido-edit').hide();
    $(document).ready(function() {
        $('.init').show();
        $('.fakey').hide();
        $('.action').click(function(){
            $(this).toggleClass('editing');
            $(this).siblings('.anime-space').toggleClass('editing');
            $(this).siblings('.bubble').toggleClass('editing');
            $('html, body').animate({
                scrollTop: $(this).offset().top -300
            }, 500);
            $('#apelido').hide();
            $('#apelido-edit').show();
        });
        $('.suggestion').click(function(){
            $(this).addClass('active');
            $(this).siblings('.anime-space').addClass('active');
            $('.fakey').fadeIn();
            $(this).parent().parent().next('.entry-group').fadeIn();
            $('html, body').animate({
                scrollTop: $(this).parent().parent().next('.entry-group').offset().top
            }, 500);
        });
        $('#apelido').click(function(){
            $('.apelido').fadeIn();
            $('.apelido').next('.entry-group').fadeIn();
            $('html, body').animate({
                scrollTop: $('.apelido').offset().top
            }, 500);
        });
        $('.fa-paper-plane').click(function(){
            $('#apelido').show();
            $('#apelido-edit').hide();
            $('.editing').addClass('edited');
            $('.editing').toggleClass('editing');
        });
    });
</script>

